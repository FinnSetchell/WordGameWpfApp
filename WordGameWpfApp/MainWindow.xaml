<Window x:Class="WordGameWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordGameWpfApp"
        mc:Ignorable="d"
        Title="Word Game" WindowStartupLocation="CenterScreen" Height="530" Width="566">
    <Grid Margin="0,0,10,0">

        <Canvas Name="LetterGrid" Margin="32,126,240,129" RenderTransformOrigin="0.5,0.5" MouseDown="LetterGrid_MouseDown" MouseUp="LetterGrid_MouseUp" MouseMove="LetterGrid_MouseMove"/>

        <TextBox IsReadOnly="True"  FontSize="18" Margin="347,72,0,0" FontFamily="consolas" RenderTransformOrigin="0.563,0.584" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" BorderBrush="{x:Null}">Words:</TextBox>
        <TextBox  IsReadOnly="True" x:Name="WordCount" FontSize="24" Margin="422,64,14,0" FontFamily="Consolas" Height="50" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <TextBox  IsReadOnly="True" x:Name="Words" FontSize="12" FontFamily="Consolas" Margin="347,119,14,129" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <TextBox   IsReadOnly="True" FontSize="18" Margin="29,72,0,0" FontFamily="consolas" RenderTransformOrigin="0.563,0.584" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66" Text="Swaps:" BorderBrush="{x:Null}"/>
        <TextBox IsReadOnly="True" x:Name="SwapCounter" FontSize="24" Margin="100,64,0,0" FontFamily="Consolas" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Width="216" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <TextBox  IsReadOnly="True" FontSize="38" FontFamily="consolas" Margin="87,7,87,0" VerticalAlignment="Top" HorizontalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}">Splot!</TextBox>




        <!--Game Over Code-->
        <Grid x:Name="GameCompleteOverlay" VerticalAlignment="Center" HorizontalAlignment="Center" Width="556">
            <TextBox FontSize="38" FontFamily="consolas" Height="514" FontWeight="Bold" VerticalAlignment="Center" BorderBrush="Transparent" Foreground="#FFDE0404" Background="#7fFFFFFF" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <!--Game Over Overlay-->
            <Canvas Margin="0,0,-10,0">
                <Rectangle Height="54" Width="50" Canvas.Left="125" Canvas.Top="68">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="76" Width="61" Canvas.Left="125" Canvas.Top="68">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="90" Width="76" Canvas.Left="121" Canvas.Top="326">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="0.89"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="76" Width="70" Canvas.Left="365" Canvas.Top="60">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="0.8"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="76" Width="73" Canvas.Left="362" Canvas.Top="337">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="White" Offset="0.87"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="46" Width="261" Canvas.Left="146" Canvas.Top="370">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FEFFFFFF" Offset="0.82"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="49" Width="257" Canvas.Left="150" Canvas.Top="60">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FE0D0D0D" Offset="1"/>
                            <GradientStop Color="White" Offset="0.18"/>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="Transparent" Offset="0"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="46" Width="300" Canvas.Left="264" Canvas.Top="216" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0.82"/>
                            <GradientStop Color="#FE0D0D0D" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="46" Width="300" Canvas.Left="-7" Canvas.Top="215" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="0.82"/>
                            <GradientStop Color="#FE0D0D0D" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="318" Width="280" Canvas.Left="138" Canvas.Top="80" Fill="White" RadiusX="10" RadiusY="10"/>
                <Rectangle Height="109" Width="239" Canvas.Left="159" Canvas.Top="203" Fill="#FFC9C9C9" RadiusX="10" RadiusY="10"/>
                <Rectangle Height="92" Width="2" Canvas.Left="277" Canvas.Top="212" Fill="White"/>
            </Canvas>

            <TextBox Margin="219,88,0,0" FontSize="18" FontFamily="consolas" BorderBrush="White" HorizontalAlignment="Left" Width="118" Height="26" VerticalAlignment="Top">Statistics:</TextBox>
            <!--Score Titles-->
            <TextBox Margin="158,158,0,0" FontSize="14" FontFamily="consolas" BorderBrush="White" Text="played" TextAlignment="Center" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>
            <TextBox Margin="223,158,0,0" FontSize="14" FontFamily="consolas" BorderBrush="White" Text="won %" TextAlignment="Center" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>
            <TextBox Margin="338,157,0,0" FontSize="14" FontFamily="consolas" BorderBrush="White" Text="max&#xD;&#xA;streak" RenderTransformOrigin="0.5,0.5" TextAlignment="Center" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>

            <TextBox Margin="278,157,0,0" FontSize="14" FontFamily="consolas" BorderBrush="White" Text="current&#xD;&#xA;streak" TextAlignment="Center" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>
            <!--Scores-->
            <TextBox x:Name="PlayedScore" Margin="158,124,0,0" FontSize="30" FontFamily="consolas" BorderBrush="White" Text="0" TextAlignment="Center" HorizontalAlignment="Left" Width="54" Height="34" VerticalAlignment="Top"/>
            <TextBox x:Name="MaxStreakScore" Margin="338,124,0,0" FontSize="30" FontFamily="consolas" BorderBrush="White" Text="0" TextAlignment="Center" HorizontalAlignment="Left" Width="55" Height="34" VerticalAlignment="Top"/>
            <TextBox x:Name="CurrentStreakScore" Margin="278,124,0,0" FontSize="30" FontFamily="consolas" BorderBrush="White" Text="0" TextAlignment="Center" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>
            <TextBox x:Name="WonPercentageScore" Margin="223,124,0,0" FontSize="30" FontFamily="consolas" BorderBrush="White" Text="0" TextAlignment="Center" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>

            <TextBox Margin="190,267,0,0" FontSize="20" FontFamily="consolas" BorderBrush="#00000000" Text="Swaps" TextAlignment="Center" Background="Transparent" Foreground="White" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68"/>
            <TextBox x:Name="SwapCountScore" Margin="171,210,0,0" FontSize="40" FontFamily="consolas" BorderBrush="#00000000" Text="0/∞" TextAlignment="Center" Background="Transparent" Foreground="White" Height="47" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107"/>
            <TextBox Margin="298,267,0,0" FontSize="20" FontFamily="consolas" BorderBrush="#00000000" Text="Words" TextAlignment="Center" Background="Transparent" Foreground="White" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68"/>
            <TextBox x:Name="WordCountScore" Margin="278,210,0,0" FontSize="40" FontFamily="consolas" BorderBrush="#00000000" Text="0" TextAlignment="Center" Background="Transparent" Foreground="White" Height="47" VerticalAlignment="Top" HorizontalAlignment="Left" Width="107"/>

            <TextBox x:Name="NextGameTimer" Margin="143,357,0,0" Text="09:01:40" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" Width="140" BorderBrush="White" FontFamily="Consolas"/>
            <TextBox Margin="171,336,0,0" Text="next game" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Width="84" BorderBrush="White" FontWeight="Bold" Height="21" VerticalAlignment="Top"/>

            <Button x:Name="Share" Margin="306,346,0,0" Content="share" Background="#FF3DBF3D" BorderBrush="#FF3DBF3D" BorderThickness="1,1,1,1" ClipToBounds="True" SnapsToDevicePixels="True" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Height="34" Foreground="White" FontWeight="Bold" FontFamily="Consolas"/>


        </Grid>
        <ComboBox x:Name="GridSize" HorizontalAlignment="Center" Margin="0,0,0,69" Width="146" SelectedIndex="0" IsReadOnly="True" Height="25" VerticalAlignment="Bottom">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Hard"/>
            <ComboBoxItem Content="Impossible"/>
        </ComboBox>
        <Button Click="Reset_Button" FontSize="30" FontFamily="consolas" Margin="0,0,0,24" HorizontalAlignment="Center" Width="146" Height="40" VerticalAlignment="Bottom">New game</Button>
    </Grid>
</Window>
